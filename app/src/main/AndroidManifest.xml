<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lianxi.demo7">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ViewFlipperActivity"/>
        <activity android:name=".ImageSwitcherActivity"/>
        <activity android:name=".ViewPagerActivity"/>
        <activity android:name=".ServiceActivity"/>
        <activity android:name=".EventBusActivity"/>

        <service android:name=".MyStartService"/>
        <service android:name=".MyBindService"/>
    </application>

</manifest>